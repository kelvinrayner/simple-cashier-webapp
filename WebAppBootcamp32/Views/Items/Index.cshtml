                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Name :</label>
                        <input type="text" id="name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Stock :</label>
                        <input type="number" id="stock" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Price :</label>
                        <input type="number" id="price" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Supplier :</label>
                        <select class="form-control" id="supplier">
                            <option>Pilih Supplier</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="save();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="update();">Update</button>
            </div>
        </div>
    </div>
</div>

