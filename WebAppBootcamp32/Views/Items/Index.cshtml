
@{
    ViewBag.Title = "Items";
}

<style type="text/css">
    table.dataTable thead tr {
        background-color: lightseagreen;
    }
</style>

<h2>Items</h2>

<p>
    <button id="addItem" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Item</button>
</p>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button id="closeItem" type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Item</h4>
            </div>
            <div class="modal-body" style="height: 300px;">
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="hidden" id="idItem" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Name :</label>
                        <input type="text" id="name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Stock :</label>
                        <input type="number" id="stock" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Price :</label>
                        <input type="number" id="price" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label name="nameCreate">Supplier :</label>
                        <select class="form-control" id="supplier">
                            <option>Pilih Supplier</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="save();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="update();">Update</button>
            </div>
        </div>
    </div>
</div>

